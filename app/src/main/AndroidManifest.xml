<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.netcomsys.apontamentodemaodeobra">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.Main"
            android:label="Lista de Equipes"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".UI.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.FA_List"
            android:label="Lista de Apontamento (LA)">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.Main"/>
        </activity>
        <activity
            android:name=".UI.FA_Form"
            android:label="Apontamento (Dia)">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.Main"/>
        </activity>
    </application>

</manifest>